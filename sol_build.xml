	<!-- init target -->
    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>


	<!-- Generate all the artifacts needed to build the service -->
	<target depends="init" name="generate-artifacts">
		
		<echo>create a generate folder</echo>
		<mkdir dir="${gen.dir}"/>
	
		<exec executable="xjc" failonerror="true" >
			<arg value="-d" />
			<arg value="${gen.dir}" />
			<arg value="-p" />
			<arg value="it.polito.dp2.NFV.sol3.service.ServiceXML" />
			<arg value="${xsd.dir}/NfvDeclaration.xsd" />
		</exec>
		<touch file="${custom.dir}/.flagfile" />
		
		<exec executable="xjc" failonerror="true" >
			<arg value="-d" />
			<arg value="${gen.dir}" />
			<arg value="-p" />
			<arg value="it.polito.dp2.NFV.sol3.service.Neo4jSimpleXML" />
			<arg value="${xsd.dir}/Neo4JSimpleXML.xsd" />
		</exec>
