		<echo>Copy the schema file from the xsd directory into the web-inf folder</echo>
		<copy file="${xsd.dir}/NfvDeclaration.xsd" todir="${web-inf.dir}"></copy>
		
	</target>
	
	
	<target name="build-client" depends="generate-artifacts">
		<echo>Bilding the client number 1 and number 2</echo>
		<javac destdir="${build.dir}" debug="${debug}" debuglevel="${debuglevel}" source="${source}" target="${target}" includeantruntime="false">
			<src path="${client1.dir}"/>
			<src path="${client2.dir}"/>
			<src path="${gen.dir}"/>
			<include name="it/polito/dp2/NFV/sol3/**" />
			 <classpath>
				<path refid="sol.classpath" />
			</classpath>
		</javac>
		<echo>Done.</echo>
		<echo>delete the generate folder...</echo>
		<delete dir= "${gen.dir}"/>
		
	</target>
	
